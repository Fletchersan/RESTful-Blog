<%- include("partials/header") %> 
    <div class="ui raised very padded text container segment">
        <h2 class="ui header"><%= blog.title %> </h2>
        <div class="ui top attached segment">
            <div class="item">
                <img class="ui centered rounded image" src="<%= blog.image %>"  alt="">
                <div class="content"><span><%= blog.created.toDateString() %> </span></div>
                <div class="description">
                    <p><%- blog.body %> </p>
                </div>
            </div>
            <span><a href="/blogs/<%= blog._id %>/edit" class="ui orange basic button">Edit</a></span>
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method='POST'>
                <button class="ui button basic red">Delete</button> 
            </form>
        </div>
    </div>

<%- include("partials/footer") %> 
