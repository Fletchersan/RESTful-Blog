<%- include('partials/header')%>
    <div class="container main text segment">
        <% blogs.forEach(blog => {%>
            <div class="blog">
                <h2><%= blog.title%></h2>
                <img src="<%=blog.image%>">
                <span><%=blog.created%></span>
                <p><%=blog.body.substring(0,100)%>...</p>
                <a href="/blogs/<%= blog._id%>" class="ui button">Show More</a>
            </div>
        <%})%>
    </div>

<%- include('partials/footer')%>